{% extends "base.jinja"%}

{% block head %}
<link href="/page.css" rel="stylesheet" />
{% block pagehead %}
{% endblock %}
{% endblock %}

{% block body %}
<nav>
    <div class="home-div"><a id="home-link" href="/"><img height="50" src="/logo.png" />Steep Seeker</a></div>
    <div class="nav-div"><ul class="nav-list">
        {% for link in nav_links %}
        <li><div class="button"><a href="{{link.to}}" {% if active_page==link.page %} class="button-cta" {% else %} class="button-cta2" {% endif %}>
                {{link.title}}
            </a></div></li>
        {% endfor %}
    </ul></div>
    <span style="flex-grow: 1"></span>
    {# <button class="theme-toggle" onclick="toggleTheme()">Toggle Theme</button> #}
</nav>

<main>
    {%block content%}

    {% endblock %}
</main>
{% endblock %}